<% include partials/header.ejs%>
<% include partials/navbar.ejs%>

<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<h2 style="text-align: center;">Create a new note</h2>
			<form action="/notes" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="note[title]" placeholder="Title" required>
				</div>

				<div class="form-group">
					<textarea class="form-control" rows="8" name="note[content]" placeholder="Your content"></textarea>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block" type="submit">Create</button>
				</div>
			</form>
			<a href="/">Back</a>
		</div>
	</div>
</div>

